                                    <span>By 
                                        <a class="rs-blog-meta-author" href="#">
                                            <%= blog && blog.createdBy ? blog.createdBy : "Teraxo Team" %>
                                        </a>
                                    </span>
                                </div>
                                <div class="rs-blog-meta-item">
                                    <span>
                                        <%
                                            var dateToShow = blog ? (blog.date || blog.createdAt) : null;
                                            var formattedDate = "Date Not Available";
                                            try {
                                                if (dateToShow) {
                                                    var d = new Date(dateToShow);
                                                    if (!isNaN(d.getTime())) formattedDate = d.toDateString();
                                                }
                                            } catch(e) {}
                                        %>
                                        <%= formattedDate %>
                                    </span>
                                </div>
                            </div>

                            <!-- Bottom -->
                            <div class="rs-blog-btn-wrapper">
                                <span class="rs-blog-meta-text">
                                    <%= Math.max(1, Math.ceil(((blog && blog.description ? blog.description : '').length) / 350)) %> min read
                                </span>

                                <a class="rs-square-btn has-icon has-light-grey" href="/blogDetails/<%= blog && blog.slug ? blog.slug : '' %>">
                                    <span class="icon-box">
                                        <i class="ri-arrow-right-line icon-first"></i>
                                        <i class="ri-arrow-right-line icon-second"></i>
                                    </span>
                                </a>
                            </div>

                        </div>
                    </div>
                </div>
            <% }); %>

        </div><!-- row end -->

        <!-- PAGINATION -->
        <% if (typeof totalPages !== 'undefined' && totalPages > 1) { %>
            <div class="row mt-5">
                <div class="col-12 d-flex justify-content-center">

                    <nav aria-label="Blog pagination">
                        <ul class="pagination">

                            <!-- Previous -->
                            <li class="page-item <%= page <= 1 ? 'disabled' : '' %>">
                                <a class="page-link" href="/blogs?page=<%= Math.max(1, (page || 1) - 1) %>&limit=<%= limit || 10 %>">Previous</a>
                            </li>

                            <!-- Page Numbers -->
                            <% 
                                var safePage = page || 1;
                                var safeLimit = limit || 10;
                                var start = Math.max(1, safePage - 3);
                                var end = Math.min(totalPages, safePage + 3);

                                if (safePage <= 4) { start = 1; end = Math.min(7, totalPages); }
                                if (safePage > totalPages - 4) { end = totalPages; start = Math.max(1, totalPages - 6); }
                            %>

                            <% if (start > 1) { %>
                                <li class="page-item"><a class="page-link" href="/blogs?page=1&limit=<%= safeLimit %>">1</a></li>
                                <% if (start > 2) { %>
                                    <li class="page-item disabled"><span class="page-link">…</span></li>
                                <% } %>
                            <% } %>

                            <% for (var i = start; i <= end; i++) { %>
                                <li class="page-item <%= safePage === i ? 'active' : '' %>">
                                    <a class="page-link" href="/blogs?page=<%= i %>&limit=<%= safeLimit %>"><%= i %></a>
                                </li>
                            <% } %>

                            <% if (end < totalPages) { %>
                                <% if (end < totalPages - 1) { %>
                                    <li class="page-item disabled"><span class="page-link">…</span></li>
                                <% } %>
                                <li class="page-item"><a class="page-link" href="/blogs?page=<%= totalPages %>&limit=<%= safeLimit %>"><%= totalPages %></a></li>
                            <% } %>

                            <!-- Next -->
                            <li class="page-item <%= safePage >= totalPages ? 'disabled' : '' %>">
                                <a class="page-link" href="/blogs?page=<%= Math.min(totalPages, safePage + 1) %>&limit=<%= safeLimit %>">Next</a>
                            </li>

                        </ul>
                    </nav>

                </div>
            </div>
        <% } %>

    </div><!-- container -->
</section>



