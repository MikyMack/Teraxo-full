        /* CSS Variables for Theme Colors */
        :root {
            --primary-red: #d32f2f;
            --primary-blue: #3B82F6;
            --dark-blue: #1e40af;
            --light-blue: #dbeafe;
            --light-red: #ffebee;
            --text-dark: #1e293b;
            --text-light: #64748b;
            --background: #f8fafc;
            --white: #ffffff;
            --border: #e2e8f0;
            --shadow: rgba(0, 0, 0, 0.08);
            --shadow-hover: rgba(0, 0, 0, 0.12);
        }

        /* Terms Page Specific Styles */
        .terms-page-wrapper {
            padding: 80px 0 60px;
            background: var(--background);
        }

        .terms-hero-section {
            background: linear-gradient(135deg, var(--primary-red) 0%, var(--primary-blue) 100%);
            padding: 60px 0;
            margin-bottom: 40px;
            text-align: center;
            color: white;
        }

        .terms-hero-section h1 {
            font-size: 2.8rem;
            font-weight: 700;
            margin-bottom: 15px;
        }

        .terms-hero-section p {
            font-size: 1.2rem;
            opacity: 0.9;
            max-width: 800px;
            margin: 0 auto;
        }

        .terms-container {
            max-width: 1200px;
            margin: 0 auto;
            padding: 0 20px;
        }

        .terms-content-box {
            background: var(--white);
            border-radius: 12px;
            box-shadow: 0 6px 15px var(--shadow);
            padding: 50px;
            margin-bottom: 40px;
            transition: transform 0.3s ease, box-shadow 0.3s ease;
        }

        .terms-content-box:hover {
            box-shadow: 0 10px 25px var(--shadow-hover);
        }

        /* Page Title */
        .terms-page-title {
            text-align: center;
            margin-bottom: 40px;
            position: relative;
            padding-bottom: 20px;
        }

        .terms-page-title h2 {
            font-size: 2.4rem;
            color: var(--text-dark);
            margin-bottom: 15px;
            font-weight: 700;
        }

        .terms-page-title p {
            color: var(--text-light);
            font-size: 1.1rem;
            max-width: 800px;
            margin: 0 auto;
        }

        .terms-page-title h2::after {
            content: '';
            position: absolute;
            bottom: 0;
            left: 50%;
            transform: translateX(-50%);
            width: 100px;
            height: 4px;
            background: linear-gradient(to right, var(--primary-red), var(--primary-blue));
            border-radius: 2px;
        }

        /* Quick Navigation Tabs */
        .terms-quick-nav {
            display: flex;
            flex-wrap: wrap;
            gap: 12px;
            margin-bottom: 40px;
            justify-content: center;
            background: var(--white);
            padding: 25px;
            border-radius: 12px;
            box-shadow: 0 4px 12px var(--shadow);
        }

        .terms-nav-tab {
            background: var(--white);
            padding: 12px 24px;
            border-radius: 50px;
            box-shadow: 0 3px 8px var(--shadow);
            text-decoration: none;
            color: var(--text-dark);
            font-weight: 500;
            transition: all 0.3s ease;
            border: 2px solid transparent;
            display: flex;
            align-items: center;
            font-size: 0.95rem;
        }

        .terms-nav-tab i {
            margin-right: 10px;
            font-size: 1rem;
        }

        .terms-nav-tab:hover {
            transform: translateY(-3px);
            box-shadow: 0 6px 12px var(--shadow-hover);
            color: var(--primary-blue);
            border-color: var(--primary-blue);
        }

        .terms-nav-tab.red:hover {
            color: var(--primary-red);
            border-color: var(--primary-red);
        }

        /* Important Notice */
        .terms-important-notice {
            background: linear-gradient(135deg, var(--primary-red) 0%, #b91c1c 100%);
            color: white;
            padding: 30px;
            border-radius: 12px;
            margin: 40px 0;
            text-align: center;
            box-shadow: 0 6px 15px rgba(211, 47, 47, 0.2);
        }

        .terms-important-notice h3 {
            font-size: 1.6rem;
            margin-bottom: 15px;
            display: flex;
            align-items: center;
            justify-content: center;
            font-weight: 600;
        }

        .terms-important-notice h3 i {
            margin-right: 12px;
            font-size: 1.4rem;
        }

        .terms-important-notice p {
            font-size: 1.1rem;
            max-width: 800px;
            margin: 0 auto;
            line-height: 1.6;
        }

        /* Section Styles */
        .terms-section {
            margin-bottom: 50px;
            scroll-margin-top: 30px;
            padding-bottom: 30px;
            border-bottom: 1px solid var(--border);
        }

        .terms-section:last-child {
            margin-bottom: 0;
            border-bottom: none;
        }

        .terms-section-title {
            display: flex;
            align-items: center;
            margin-bottom: 25px;
            padding-bottom: 15px;
            border-bottom: 2px solid var(--border);
            position: relative;
        }

        .terms-section-title::after {
            content: '';
            position: absolute;
            bottom: -2px;
            left: 0;
            width: 80px;
            height: 2px;
            background: linear-gradient(to right, var(--primary-red), var(--primary-blue));
        }

        .terms-section-title i {
            background: linear-gradient(135deg, var(--primary-red), var(--primary-blue));
            -webkit-background-clip: text;
            background-clip: text;
            color: transparent;
            font-size: 1.8rem;
            margin-right: 20px;
            width: 40px;
            text-align: center;
        }

        .terms-section-title h3 {
            font-size: 1.7rem;
            color: var(--text-dark);
            font-weight: 600;
            margin: 0;
        }

        .terms-section-content {
            padding-left: 60px;
        }

        .terms-section-content p {
            margin-bottom: 20px;
            color: var(--text-dark);
            line-height: 1.8;
            font-size: 1.05rem;
        }

        .terms-section-content strong {
            color: var(--dark-blue);
            font-weight: 600;
        }

        .terms-section-content ul, .terms-section-content ol {
            margin-bottom: 25px;
            padding-left: 25px;
        }

        .terms-section-content li {
            margin-bottom: 12px;
            color: var(--text-dark);
            position: relative;
            padding-left: 10px;
            line-height: 1.7;
        }

        .terms-section-content li:before {
            content: "•";
            color: var(--primary-blue);
            font-weight: bold;
            position: absolute;
            left: -15px;
        }

        /* Special Boxes */
        .terms-highlight-box {
            background: var(--light-blue);
            border-left: 4px solid var(--primary-blue);
            padding: 25px;
            margin: 30px 0;
            border-radius: 0 8px 8px 0;
        }

        .terms-warning-box {
            background: var(--light-red);
            border-left: 4px solid var(--primary-red);
            padding: 25px;
            margin: 30px 0;
            border-radius: 0 8px 8px 0;
        }

        .terms-highlight-box h4, .terms-warning-box h4 {
            margin-bottom: 15px;
            display: flex;
            align-items: center;
            font-size: 1.3rem;
            font-weight: 600;
        }

        .terms-highlight-box h4 i {
            color: var(--primary-blue);
            margin-right: 12px;
            font-size: 1.4rem;
        }

        .terms-warning-box h4 i {
            color: var(--primary-red);
            margin-right: 12px;
            font-size: 1.4rem;
        }

        .terms-highlight-box p, .terms-warning-box p {
            margin-bottom: 0;
            color: var(--text-dark);
        }

        /* Product Reference Section */
        .terms-product-reference {
            background: linear-gradient(135deg, #f0f9ff 0%, #fef2f2 100%);
            border-radius: 12px;
            padding: 30px;
            margin: 35px 0;
            border: 1px solid var(--border);
        }

        .terms-product-reference h4 {
            color: var(--primary-blue);
            margin-bottom: 20px;
            font-size: 1.4rem;
            display: flex;
            align-items: center;
            font-weight: 600;
        }

        .terms-product-reference h4 i {
            margin-right: 12px;
            font-size: 1.5rem;
        }

        .terms-product-reference p {
            color: var(--text-dark);
            margin-bottom: 0;
        }

        /* Table Styles */
        .terms-table {
            width: 100%;
            border-collapse: collapse;
            margin: 25px 0;
            border-radius: 8px;
            overflow: hidden;
            box-shadow: 0 4px 12px var(--shadow);
        }

        .terms-table th {
            background: linear-gradient(135deg, var(--primary-blue), var(--dark-blue));
            color: white;
            padding: 15px;
            text-align: left;
            font-weight: 600;
        }

        .terms-table td {
            padding: 15px;
            border-bottom: 1px solid var(--border);
        }

        .terms-table tr:nth-child(even) {
            background-color: #f8fafc;
        }

        .terms-table tr:hover {
            background-color: var(--light-blue);
        }

        /* Print Button */
        .terms-print-btn {
            position: fixed;
            bottom: 40px;
            right: 40px;
            background: linear-gradient(135deg, var(--primary-red), var(--primary-blue));
            color: white;
            border: none;
            border-radius: 50px;
            padding: 15px 30px;
            font-weight: 600;
            cursor: pointer;
            box-shadow: 0 6px 20px rgba(0,0,0,0.2);
            z-index: 999;
            display: flex;
            align-items: center;
            gap: 12px;
            transition: transform 0.3s ease, box-shadow 0.3s ease;
            font-size: 1rem;
        }

        .terms-print-btn:hover {
            transform: translateY(-5px);
            box-shadow: 0 10px 25px rgba(0,0,0,0.25);
        }

        .terms-print-btn i {
            font-size: 1.2rem;
        }

        /* Last Updated */
        .terms-last-updated {
            text-align: center;
            color: var(--text-light);
            font-size: 0.95rem;
            margin-top: 40px;
            padding-top: 20px;
            border-top: 1px solid var(--border);
        }

        .terms-last-updated i {
            margin-right: 8px;
            color: var(--primary-blue);
        }

        /* Responsive Design */
        @media (max-width: 992px) {
            .terms-content-box {
                padding: 40px 30px;
            }
            
            .terms-section-content {
                padding-left: 0;
            }
            
            .terms-section-title {
                flex-direction: column;
                align-items: flex-start;
            }
            
            .terms-section-title i {
                margin-bottom: 15px;
            }
            
            .terms-hero-section h1 {
                font-size: 2.4rem;
            }
        }

        @media (max-width: 768px) {
            .terms-hero-section {
                padding: 40px 0;
            }
            
            .terms-hero-section h1 {
                font-size: 2rem;
            }
            
            .terms-page-title h2 {
                font-size: 1.8rem;
            }
            
            .terms-content-box {
                padding: 30px 20px;
            }
            
            .terms-section-title h3 {
                font-size: 1.5rem;
            }
            
            .terms-quick-nav {
                flex-direction: column;
                align-items: center;
            }
            
            .terms-nav-tab {
                width: 100%;
                justify-content: center;
                text-align: center;
                padding: 15px;
            }
            
            .terms-print-btn {
                bottom: 20px;
                right: 20px;
                padding: 12px 24px;
                font-size: 0.9rem;
            }
            
            .terms-table {
                font-size: 0.9rem;
            }
            
            .terms-table th,
            .terms-table td {
                padding: 10px;
            }
        }

        @media (max-width: 480px) {
            .terms-hero-section {
                padding: 30px 0;
            }
            
            .terms-hero-section h1 {
                font-size: 1.8rem;
            }
            
            .terms-page-title h2 {
                font-size: 1.6rem;
            }
            
            .terms-section-title h3 {
                font-size: 1.4rem;
            }
            
            .terms-important-notice {
                padding: 20px;
            }
            
            .terms-important-notice h3 {
                font-size: 1.4rem;
            }
            
            .terms-print-btn {
                bottom: 15px;
                right: 15px;
                padding: 10px 20px;
                font-size: 0.85rem;
            }
        }

        /* Print Styles */
        @media print {
            .terms-quick-nav,
            .terms-print-btn,
            .header,
            .footer,
            .backtotop-wrap {
                display: none !important;
            }
            
            .terms-content-box {
                box-shadow: none;
                border: 1px solid #ddd;
            }
            
            body {
                background: white !important;
                color: black !important;
                padding: 20px !important;
            }
            
            .terms-page-wrapper {
                padding: 0 !important;
            }
            
            .terms-hero-section {
                background: none !important;
                color: black !important;
                padding: 20px 0 !important;
            }
        }
    </style>
</head>

