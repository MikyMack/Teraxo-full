    <script>
        // Global variables
        let bannerCurrentPage = 1;
        let bannerLimit = 10;
        let bannerSearchQuery = '';
        let banners = [];
        let itemToDelete = null;

        document.addEventListener('DOMContentLoaded', function () {
            fetchBanners();

            // Event listeners
            document.getElementById('banner-limit-select').addEventListener('change', function () {
                bannerLimit = parseInt(this.value);
                bannerCurrentPage = 1;
                fetchBanners();
            });

            document.getElementById('banner-search-input').addEventListener('keypress', function (e) {
                if (e.key === 'Enter') {
                    bannerSearchQuery = this.value;
                    bannerCurrentPage = 1;
                    fetchBanners();
                }
            });

            document.getElementById('banner-search-btn').addEventListener('click', function () {
                const input = document.getElementById('banner-search-input');
                bannerSearchQuery = input.value;
                bannerCurrentPage = 1;
                fetchBanners();
            });

            // Form submissions
            document.getElementById('add-banner-form').addEventListener('submit', function (e) {
                e.preventDefault();
                addBanner();
            });

            document.getElementById('edit-banner-form').addEventListener('submit', function (e) {
                e.preventDefault();
                updateBanner();
            });

            document.getElementById('confirm-delete-btn').addEventListener('click', function () {
                if (itemToDelete) {
                    deleteBanner(itemToDelete);
                    itemToDelete = null;
                }
            });

            // Image preview setup
            setupImagePreview('add-banner-image', 'add-banner-image-preview-grid');
            setupImagePreview('edit-banner-image', 'edit-banner-image-preview-grid');

            setupFileUploadArea('add-banner-file-upload-area', 'add-banner-image');
            setupFileUploadArea('edit-banner-file-upload-area', 'edit-banner-image');
        });

        // Setup image preview
        function setupImagePreview(inputId, previewGridId) {
            const input = document.getElementById(inputId);
            const previewGrid = document.getElementById(previewGridId);
            
            input.addEventListener('change', function (e) {
                const files = e.target.files;
                previewGrid.innerHTML = '';
                
                for (let file of files) {
                    if (file && file.type.startsWith('image/')) {
                        const reader = new FileReader();
                        reader.onload = function (e) {
                            const previewItem = document.createElement('div');
                            previewItem.className = 'image-preview-item';
                            
                            const img = document.createElement('img');
                            img.src = e.target.result;
                            img.alt = 'Preview';
                            
                            const removeBtn = document.createElement('button');
                            removeBtn.type = 'button';
                            removeBtn.className = 'remove-preview';
                            removeBtn.innerHTML = '<i class="icon-x"></i>';
                            removeBtn.onclick = function () {
                                previewItem.remove();
                                input.value = '';
                            };
                            
                            previewItem.appendChild(img);
                            previewItem.appendChild(removeBtn);
                            previewGrid.appendChild(previewItem);
                        };
                        reader.readAsDataURL(file);
                    }
                }
            });
        }

        // Setup file upload area
        function setupFileUploadArea(uploadAreaId, inputId) {
            const uploadArea = document.getElementById(uploadAreaId);
            const fileInput = document.getElementById(inputId);

            uploadArea.addEventListener('click', function () {
                fileInput.click();
            });

            uploadArea.addEventListener('dragover', function (e) {
                e.preventDefault();
                uploadArea.classList.add('dragover');
            });

            uploadArea.addEventListener('dragleave', function () {
                uploadArea.classList.remove('dragover');
            });

            uploadArea.addEventListener('drop', function (e) {
                e.preventDefault();
                uploadArea.classList.remove('dragover');
                const files = e.dataTransfer.files;
                if (files.length > 0) {
                    fileInput.files = files;
                    fileInput.dispatchEvent(new Event('change'));
                }
            });
        }

        // API call helper
        async function apiCall(url, options = {}) {
            try {
                const response = await fetch(url, {
                    headers: {
                        'Accept': 'application/json',
                        ...options.headers
                    },
                    ...options
                });
                
                if (!response.ok) {
                    throw new Error(`HTTP error! status: ${response.status}`);
                }
                
                return await response.json();
            } catch (error) {
                console.error('API call failed:', error);
                throw error;
            }
        }

        // Fetch banners
        async function fetchBanners() {
            try {
                showLoader('banners-list');
                
                const params = new URLSearchParams({
                    page: bannerCurrentPage,
                    limit: bannerLimit,
                    ...(bannerSearchQuery && { search: bannerSearchQuery })
                });
                
                const data = await apiCall(`/bannerlist?${params}`);
                
                // Handle different response formats
                banners = Array.isArray(data.banners) ? data.banners : (data.data || data || []);
                const totalCount = data.totalCount || data.total || banners.length;
                
                renderBanners(banners);
                renderPagination(Math.ceil(totalCount / bannerLimit), bannerCurrentPage);
                
                const showingCount = Math.min(banners.length, bannerLimit);
                document.getElementById('banner-showing-entries').textContent = 
                    `Showing ${showingCount} of ${totalCount} entries`;
                    
            } catch (error) {
                console.error('Error fetching banners:', error);
                showError('banners-list', 'Failed to load banners. Please try again later.');
            }
        }

        // Show loader
        function showLoader(containerId) {
            const container = document.getElementById(containerId);
            container.innerHTML = `
                <tr>
                    <td colspan="6" class="text-center">
                        <div class="loading-spinner">
                            <i class="icon-loader"></i>
                            <div>Loading...</div>
                        </div>
                    </td>
                </tr>
            `;
        }

        // Show error
        function showError(containerId, message) {
            const container = document.getElementById(containerId);
            container.innerHTML = `
                <tr>
                    <td colspan="6" class="text-center error-message">
                        <i class="icon-alert-circle"></i>
                        <div>${message}</div>
                    </td>
                </tr>
            `;
        }

        // Render banners
        function renderBanners(banners) {
            const bannersList = document.getElementById('banners-list');
            bannersList.innerHTML = '';
            
            if (!banners.length) {
                bannersList.innerHTML = `
                    <tr>
                        <td colspan="6" class="text-center">
                            <div class="empty-state">
                                <i class="icon-image"></i>
                                <div>No banners found</div>
                                <small>${bannerSearchQuery ? 'Try adjusting your search criteria' : 'Get started by adding your first banner'}</small>
                            </div>
                        </td>
                    </tr>
                `;
                return;
            }
            
            banners.forEach(banner => {
                const bannerRow = document.createElement('tr');
                bannerRow.id = `banner-${banner._id || banner.id}`;
                
                const bannerImage = banner.image || '/images/placeholder-banner.jpg';
                const createdAt = new Date(banner.createdAt || banner.created_date).toLocaleDateString('en-US', {
                    year: 'numeric', 
                    month: 'short', 
                    day: 'numeric'
                });
                
                bannerRow.innerHTML = `
                    <td>
                        <img src="${bannerImage}" alt="${banner.title || ''}" 
                             class="banner-image" 
                             onerror="this.src='/images/placeholder-banner.jpg'">
                    </td>
                    <td>
                        <div class="banner-name">${banner.title || ''}</div>
                        ${banner.subtitle ? `<div class="banner-subtitle">${banner.subtitle}</div>` : ''}
                    </td>
                    <td>
                        ${banner.link ? `
                            <a href="${banner.link}" target="_blank" class="banner-link" title="${banner.link}">
                                <i class="icon-external-link"></i>
                                View Link
                            </a>
                        ` : '<span class="text-muted">No link</span>'}
                    </td>
                    <td>
                        <span class="status-badge ${banner.isActive ? 'active' : 'inactive'}">
                            <i class="icon-${banner.isActive ? 'check' : 'x'}"></i>
                            ${banner.isActive ? 'Active' : 'Inactive'}
                        </span>
                    </td>
                    <td>
                        <div class="text-tiny">${createdAt}</div>
                    </td>
                    <td>
                        <div class="banner-actions">
                            <button class="item edit" onclick="showEditBannerModal('${banner._id || banner.id}')" title="Edit Banner">
                                <i class="icon-edit-3"></i>
                            </button>
                            <button class="item toggle ${banner.isActive ? '' : 'inactive'}" 
                                    onclick="toggleBanner('${banner._id || banner.id}')"
                                    title="${banner.isActive ? 'Deactivate' : 'Activate'}">
                                <i class="icon-toggle-${banner.isActive ? 'right' : 'left'}"></i>
                            </button>
                            <button class="item trash" onclick="confirmDeleteItem('${banner._id || banner.id}')"
                                    title="Delete Banner">
                                <i class="icon-trash-2"></i>
                            </button>
                        </div>
                    </td>
                `;
                
                bannersList.appendChild(bannerRow);
            });
        }

        // Show add banner modal
        function showAddBannerModal() {
            const form = document.getElementById('add-banner-form');
            const previewGrid = document.getElementById('add-banner-image-preview-grid');
            const statusCheck = document.getElementById('add-banner-status');
            
            form.reset();
            previewGrid.innerHTML = '';
            statusCheck.checked = true;
            
            showModal('add-banner-modal');
        }

        // Show edit banner modal
        function showEditBannerModal(bannerId) {
            const banner = banners.find(b => (b._id || b.id) == bannerId);
            
            if (!banner) {
                showNotification('Banner not found!', 'error');
                return;
            }
            
            // Populate form fields
            document.getElementById('edit-banner-id').value = banner._id || banner.id || '';
            document.getElementById('edit-banner-title').value = banner.title || '';
            document.getElementById('edit-banner-subtitle').value = banner.subtitle || '';
            document.getElementById('edit-banner-description').value = banner.description || '';
            document.getElementById('edit-banner-link').value = banner.link || '';
            document.getElementById('edit-banner-status').checked = !!banner.isActive;
            
            // Show current image
            const imageContainer = document.getElementById('edit-banner-current-image');
            imageContainer.innerHTML = '';
            
            if (banner.image) {
                const imgDiv = document.createElement('div');
                imgDiv.className = 'current-image';
                imgDiv.innerHTML = `
                    <img src="${banner.image}" alt="Current Banner" onerror="this.src='/images/placeholder-banner.jpg'">
                    <div class="image-overlay">Current Image</div>
                `;
                imageContainer.appendChild(imgDiv);
            }
            
            // Clear preview grid
            document.getElementById('edit-banner-image-preview-grid').innerHTML = '';
            
            showModal('edit-banner-modal');
        }

        // Modal functions
        function showModal(modalId) {
            const modal = document.getElementById(modalId);
            modal.style.display = 'block';
            document.body.style.overflow = 'hidden';
        }

        function closeModal(modalId) {
            const modal = document.getElementById(modalId);
            modal.style.display = 'none';
            document.body.style.overflow = 'auto';
        }

        // Close modal when clicking outside
        document.addEventListener('click', function (e) {
            if (e.target.classList.contains('modal')) {
                closeModal(e.target.id);
            }
        });

        // Add banner
        async function addBanner() {
            const form = document.getElementById('add-banner-form');
            const formData = new FormData(form);
            const submitBtn = form.querySelector('button[type="submit"]');
            
            try {
                submitBtn.disabled = true;
                submitBtn.innerHTML = '<i class="icon-loader"></i> Adding...';
                
                await apiCall('/bannercreate', {
                    method: 'POST',
                    body: formData
                });
                
                showNotification('Banner added successfully!', 'success');
                closeModal('add-banner-modal');
                fetchBanners();
                
            } catch (error) {
                console.error('Error adding banner:', error);
                showNotification('Failed to add banner. Please try again.', 'error');
            } finally {
                submitBtn.disabled = false;
                submitBtn.innerHTML = '<i class="icon-save"></i> Add Banner';
            }
        }

        // Update banner
        async function updateBanner() {
            const form = document.getElementById('edit-banner-form');
            const formData = new FormData(form);
            const bannerId = document.getElementById('edit-banner-id').value;
            const submitBtn = form.querySelector('button[type="submit"]');
            
            try {
                submitBtn.disabled = true;
                submitBtn.innerHTML = '<i class="icon-loader"></i> Updating...';
                
                await apiCall(`/banner/${bannerId}/update`, {
                    method: 'POST',
                    body: formData
                });
                
                showNotification('Banner updated successfully!', 'success');
                closeModal('edit-banner-modal');
                fetchBanners();
                
            } catch (error) {
                console.error('Error updating banner:', error);
                showNotification('Failed to update banner. Please try again.', 'error');
            } finally {
                submitBtn.disabled = false;
                submitBtn.innerHTML = '<i class="icon-save"></i> Update Banner';
            }
        }

        // Toggle banner status
        async function toggleBanner(bannerId) {
            try {
                await apiCall(`/banner/${bannerId}/toggle`, { method: 'POST' });
                
                const banner = banners.find(b => (b._id || b.id) === bannerId);
                const newStatus = banner ? !banner.isActive : false;
                
                showNotification(`Banner ${newStatus ? 'activated' : 'deactivated'} successfully!`, 'success');
                fetchBanners();
                
            } catch (error) {
                console.error('Error toggling banner:', error);
                showNotification('Failed to update banner status. Please try again.', 'error');
            }
        }

        // Confirm delete
        function confirmDeleteItem(bannerId) {
            itemToDelete = bannerId;
            showModal('delete-confirm-modal');
        }

        // Delete banner
        async function deleteBanner(bannerId) {
            try {
                await apiCall(`/bannerdelete/${bannerId}`, { method: 'DELETE' });
                
                showNotification('Banner deleted successfully!', 'success');
                closeModal('delete-confirm-modal');
                fetchBanners();
                
            } catch (error) {
                console.error('Error deleting banner:', error);
                showNotification('Failed to delete banner. Please try again.', 'error');
            }
        }

        // Render pagination
        function renderPagination(totalPages, currentPage) {
            const paginationContainer = document.getElementById('banner-pagination');
            paginationContainer.innerHTML = '';
            
            if (totalPages <= 1) {
                return;
            }
            
            // Previous button
            if (currentPage > 1) {
                addPaginationButton(paginationContainer, 'prev', 'Previous', currentPage - 1);
            }
            
            // Page numbers
            const startPage = Math.max(1, currentPage - 2);
            const endPage = Math.min(totalPages, currentPage + 2);
            
            for (let i = startPage; i <= endPage; i++) {
                addPaginationButton(paginationContainer, i.toString(), i.toString(), i, i === currentPage);
            }
            
            // Next button
            if (currentPage < totalPages) {
                addPaginationButton(paginationContainer, 'next', 'Next', currentPage + 1);
            }
        }

        function addPaginationButton(container, key, text, pageNumber, isActive = false) {
            const li = document.createElement('li');
            if (isActive) li.className = 'active';
            
            const a = document.createElement('a');
            a.href = '#';
            a.innerHTML = text;
            a.onclick = (e) => {
                e.preventDefault();
                bannerCurrentPage = pageNumber;
                fetchBanners();
            };
            
            li.appendChild(a);
            container.appendChild(li);
        }

        // Notification system
        function showNotification(message, type = 'info') {
            // Remove existing notifications
            const existingNotifications = document.querySelectorAll('.notification');
            existingNotifications.forEach(n => n.remove());
            
            // Create new notification
            const notification = document.createElement('div');
            notification.className = `notification ${type}`;
            notification.innerHTML = `
                <div class="notification-content">
                    <i class="icon-${getNotificationIcon(type)}"></i>
                    <span>${message}</span>
                </div>
                <button class="notification-close" onclick="this.parentElement.remove()">
                    <i class="icon-x"></i>
                </button>
            `;
            
            document.body.appendChild(notification);
            
            // Auto remove after 5 seconds
            setTimeout(() => {
                if (notification.parentElement) {
                    notification.remove();
                }
            }, 5000);
        }

        function getNotificationIcon(type) {
            const icons = {
                success: 'check-circle',
                error: 'alert-circle',
                warning: 'alert-triangle',
                info: 'info'
            };
            return icons[type] || 'info';
        }
    </script>

