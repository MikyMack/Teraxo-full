    // Pagination functions (schema independent)
    function renderPagination(type, totalPages, currentPage) {
        const paginationContainer = document.getElementById(`${type}-pagination`);
        if (!paginationContainer) return;
        if (totalPages <= 1) {
            paginationContainer.innerHTML = '';
            return;
        }
        paginationContainer.innerHTML = '';
        if (currentPage > 1) {
            addPaginationButton(paginationContainer, type, 'prev', 'Previous', currentPage - 1);
        }
        const startPage = Math.max(1, currentPage - 2);
        const endPage = Math.min(totalPages, currentPage + 2);
        for (let i = startPage; i <= endPage; i++) {
            addPaginationButton(paginationContainer, type, i.toString(), i.toString(), i, i === currentPage);
        }
        if (currentPage < totalPages) {
            addPaginationButton(paginationContainer, type, 'next', 'Next', currentPage + 1);
        }
    }

    function addPaginationButton(container, type, key, text, pageNumber, isActive = false) {
        if (!container) return;
        const li = document.createElement('li');
        if (isActive) li.className = 'active';
        const a = document.createElement('a');
        a.href = '#';
        a.innerHTML = text;
        a.onclick = (e) => {
            e.preventDefault();
            if (type === 'banner') {
                bannerCurrentPage = pageNumber;
                fetchBanners();
            } else {
                posterCurrentPage = pageNumber;
                fetchPosters();
            }
        };
        li.appendChild(a);
        container.appendChild(li);
    }

    // Notification system
    function showNotification(message, type = 'info') {
        const existingNotifications = document.querySelectorAll('.notification');
        existingNotifications.forEach(n => n.remove());
        const notification = document.createElement('div');
        notification.className = `notification ${type}`;
        notification.innerHTML = `
            <div class="notification-content">
                <i class="icon-${getNotificationIcon(type)}"></i>
                <span>${message}</span>
            </div>
            <button class="notification-close" onclick="this.parentElement.remove()">
                <i class="icon-x"></i>
            </button>
        `;
        document.body.appendChild(notification);
        setTimeout(() => {
            if (notification.parentElement) notification.remove();
        }, 5000);
    }

    function getNotificationIcon(type) {
        const icons = {
            success: 'check-circle',
            error: 'alert-circle',
            warning: 'alert-triangle',
            info: 'info'
        };
        return icons[type] || 'info';
    }

