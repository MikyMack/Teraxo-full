                        <script>
                            // Store testimonials globally for edit functionality
                            let allTestimonials = [];

                            // Load Testimonials from API
                            async function loadTestimonials() {
                                const testimonialList = document.getElementById('testimonial-list');
                                testimonialList.innerHTML = '<div id="loading-testimonials">Loading testimonials...</div>';

                                try {
                                    const response = await fetch('/api/admin-testimonial-list');
                                    if (!response.ok) throw new Error('Failed to load testimonials');
                                    const result = await response.json();
                                    if (!result.success || !Array.isArray(result.testimonials)) throw new Error(result.message || 'Failed to load testimonials');

                                    allTestimonials = result.testimonials;
                                    testimonialList.innerHTML = '';

                                    if (allTestimonials.length > 0) {
                                        for (let i = 0; i < allTestimonials.length; i++) {
                                            const t = allTestimonials[i];
                                            const stars = '★'.repeat(t.rating || 0) + '☆'.repeat(5 - (t.rating || 0));
                                            const date = t.created_at ? new Date(t.created_at).toLocaleDateString('en-US', { year: 'numeric', month: 'short', day: 'numeric' }) : '';
                                            const card = document.createElement('div');
                                            card.className = 'testimonial-card';
                                            card.innerHTML = `
                                                <div class="testimonial-title">${t.title || 'No Title'}</div>
                                                <div class="testimonial-name">${t.name || 'Anonymous'}</div>
                                                <div class="testimonial-designation">${t.designation || 'Not Specified'}</div>
                                                <div class="star-rating" title="${t.rating || 0} stars">${stars}</div>
                                                <div class="testimonial-content">${t.content || 'No content provided'}</div>
                                                <div class="text-tiny text-gray-500 mb-15">Added: ${date}</div>
                                                <div class="card-actions">
                                                    <button class="tf-button style-5 btn-small" onclick="editTestimonial('${t._id}')" title="Edit">
                                                        <i class="icon-edit"></i> Edit
                                                    </button>
                                                    <button class="tf-button style-6 btn-small" onclick="deleteTestimonial('${t._id}')" title="Delete">
                                                        <i class="icon-trash-2"></i> Delete
                                                    </button>
                                                </div>
                                            `;
                                            testimonialList.appendChild(card);
                                        }
                                    } else {
                                        testimonialList.innerHTML = '<div class="empty-state">No testimonials found. Add your first testimonial!</div>';
                                    }
                                } catch (error) {
                                    console.error('Error loading testimonials:', error);
                                    showToast('Error loading testimonials: ' + error.message, 'error');
                                    testimonialList.innerHTML = '<div class="empty-state">Failed to load testimonials. Please try again.</div>';
                                }
                            }

                            // Add Testimonial
                            document.getElementById('addTestimonialForm').addEventListener('submit', async function (e) {
                                e.preventDefault();
                                const submitBtn = this.querySelector('button[type="submit"]');
                                const originalText = submitBtn.textContent;
                                submitBtn.textContent = 'Creating...';
                                submitBtn.disabled = true;

                                const formData = {
                                    title: document.getElementById('testimonialTitle').value.trim(),
                                    rating: parseInt(document.getElementById('testimonialRating').value),
                                    content: document.getElementById('testimonialContent').value.trim(),
                                    name: document.getElementById('testimonialName').value.trim(),
                                    designation: document.getElementById('testimonialDesignation').value.trim()
                                };

                                try {
                                    const response = await fetch('/api/admin-testimonial-create', {
                                        method: 'POST',
                                        headers: { 'Content-Type': 'application/json' },
                                        body: JSON.stringify(formData)
                                    });

                                    const result = await response.json();

                                    if (response.ok && result.success) {
                                        closeModal('addTestimonialModal');
                                        this.reset();
                                        showToast(result.message || 'Testimonial added successfully!', 'success');
                                        loadTestimonials();
                                    } else {
                                        showToast(result.message || 'Error adding testimonial', 'error');
                                    }
                                } catch (error) {
                                    console.error('Error adding testimonial:', error);
                                    showToast('Error adding testimonial', 'error');
                                } finally {
                                    submitBtn.textContent = originalText;
                                    submitBtn.disabled = false;
                                }
                            });

                            // Edit Testimonial Modal Fill
                            function editTestimonial(id) {
                                const testimonial = allTestimonials.find(t => t._id == id);

                                if (!testimonial) {
                                    showToast('Testimonial not found. Please refresh.', 'error');
                                    return;
                                }

                                document.getElementById('editTestimonialId').value = testimonial._id;
                                document.getElementById('editTestimonialTitle').value = testimonial.title || '';
                                document.getElementById('editTestimonialRating').value = testimonial.rating || 5;
                                document.getElementById('editTestimonialContent').value = testimonial.content || '';
                                document.getElementById('editTestimonialName').value = testimonial.name || '';
                                document.getElementById('editTestimonialDesignation').value = testimonial.designation || '';

                                showModal('editTestimonialModal');
                            }

                            // Update Testimonial
                            document.getElementById('editTestimonialForm').addEventListener('submit', async function (e) {
                                e.preventDefault();
                                const submitBtn = this.querySelector('button[type="submit"]');
                                const originalText = submitBtn.textContent;
                                submitBtn.textContent = 'Updating...';
                                submitBtn.disabled = true;

                                const id = document.getElementById('editTestimonialId').value;
                                const formData = {
                                    title: document.getElementById('editTestimonialTitle').value.trim(),
                                    rating: parseInt(document.getElementById('editTestimonialRating').value),
                                    content: document.getElementById('editTestimonialContent').value.trim(),
                                    name: document.getElementById('editTestimonialName').value.trim(),
                                    designation: document.getElementById('editTestimonialDesignation').value.trim()
                                };

                                try {
                                    const response = await fetch(`/api/admin-testimonial/${id}`, {
                                        method: 'PUT',
                                        headers: { 'Content-Type': 'application/json' },
                                        body: JSON.stringify(formData)
                                    });

                                    const result = await response.json();

                                    if (response.ok && result.success) {
                                        closeModal('editTestimonialModal');
                                        showToast(result.message || 'Testimonial updated successfully!', 'success');
                                        loadTestimonials();
                                    } else {
                                        showToast(result.message || 'Error updating testimonial', 'error');
                                    }
                                } catch (error) {
                                    console.error('Error updating testimonial:', error);
                                    showToast('Error updating testimonial', 'error');
                                } finally {
                                    submitBtn.textContent = originalText;
                                    submitBtn.disabled = false;
                                }
                            });

                            // Delete Testimonial
                            async function deleteTestimonial(id) {
                                if (!confirm('Are you sure you want to delete this testimonial? This action cannot be undone.')) {
                                    return;
                                }
                                try {
                                    const response = await fetch(`/api/admin-testimonial/${id}`, {
                                        method: 'DELETE'
                                    });
                                    const result = await response.json();
                                    if (response.ok && result.success) {
                                        showToast(result.message || 'Testimonial deleted successfully!', 'success');
                                        loadTestimonials();
                                    } else {
                                        showToast(result.message || 'Error deleting testimonial', 'error');
                                    }
                                } catch (error) {
                                    console.error('Error deleting testimonial:', error);
                                    showToast('Error deleting testimonial', 'error');
                                }
                            }

                            // Modal Functions
                            function showAddTestimonialModal() {
                                showModal('addTestimonialModal');
                            }
                            function showModal(modalId) {
                                document.getElementById(modalId).style.display = 'block';
                                document.body.style.overflow = 'hidden';
                            }
                            function closeModal(modalId) {
                                document.getElementById(modalId).style.display = 'none';
                                document.body.style.overflow = 'auto';
                            }
                            // Close modals when clicking outside
                            window.onclick = function (event) {
                                document.querySelectorAll('.modal').forEach(modal => {
                                    if (event.target == modal) {
                                        closeModal(modal.id);
                                    }
                                });
                            };
                            // Toast Notification
                            function showToast(message, type = 'success') {
                                const toast = document.createElement('div');
                                toast.className = `toast-notification ${type}`;
                                toast.textContent = message;
                                document.body.appendChild(toast);

                                setTimeout(() => {
                                    toast.classList.add('show');
                                }, 100);

                                setTimeout(() => {
                                    toast.classList.remove('show');
                                    setTimeout(() => {
                                        toast.remove();
                                    }, 300);
                                }, 3000);
                            }

                            // On page load, fetch and render testimonials
                            document.addEventListener('DOMContentLoaded', function() {
                                loadTestimonials();
                            });
