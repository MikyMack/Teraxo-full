        let currentEditProductId = null;
        let imageFiles = [];
        let qaCounter = 0;

        // DOM Ready
        document.addEventListener('DOMContentLoaded', function() {
            // Add product button
            document.getElementById('add-product-btn').addEventListener('click', function() {
                showAddProductModal();
            });

            // Form submission
            const productForm = document.getElementById('product-form');
            if (productForm) {
                productForm.addEventListener('submit', function(e) {
                    e.preventDefault();
                    handleProductSubmit();
                });
            }

            // Delete confirmation
            const confirmDeleteBtn = document.getElementById('confirm-delete-btn');
            if (confirmDeleteBtn) {
                confirmDeleteBtn.addEventListener('click', function() {
                    handleProductDelete();
                });
            }

            // Title to slug conversion
            const titleInput = document.getElementById('product-title');
            if (titleInput) {
                titleInput.addEventListener('blur', function() {
                    const slugInput = document.getElementById('product-slug');
                    if (slugInput && !slugInput.value) {
                        slugInput.value = generateSlug(this.value);
                    }
                });
            }

            // Image preview
            const imageInput = document.getElementById('product-images');
            if (imageInput) {
                imageInput.addEventListener('change', function(e) {
                    imageFiles = Array.from(e.target.files);
                    renderImagePreview();
                });
            }

            // Setup file upload area drag & drop
            setupFileUploadArea();
        });

        // Show add product modal
        function showAddProductModal() {
            resetProductForm();
            document.getElementById('product-modal-title').textContent = 'Add New Product';
            document.getElementById('product-modal-submit-btn').innerHTML = '<i class="icon-plus"></i> Create Product';
            showModal('product-modal');
        }

        // Edit product
        function editProduct(productId) {
            const product = staticProducts[productId];
            if (!product) return;

            currentEditProductId = productId;
            resetProductForm();
            
            // Fill form with product data
            document.getElementById('product-title').value = product.title;
            document.getElementById('product-slug').value = product.slug;
            document.getElementById('product-description').value = product.description;
            document.getElementById('product-subDescription').value = product.subDescription;
            document.getElementById('product-chemicalBase').value = product.chemicalBase;
            document.getElementById('product-appearance').value = product.appearance;
            document.getElementById('product-shelfLife').value = product.shelfLife;
            document.getElementById('product-cureTime').value = product.cureTime;
            document.getElementById('product-applicationTips').value = product.applicationTips;
            document.getElementById('product-seoTitle').value = product.seoTitle;
            document.getElementById('product-seoDescription').value = product.seoDescription;
            document.getElementById('product-isActive').checked = product.isActive;

            // Fill key features
            if (product.keyFeatures && product.keyFeatures.length) {
                product.keyFeatures.forEach(feature => {
                    addListItem('features-list', feature, 'keyFeatures-input');
                });
            }

            // Fill available packs
            if (product.availablePacks && product.availablePacks.length) {
                product.availablePacks.forEach(pack => {
                    addListItem('packs-list', pack, 'availablePacks-input');
                });
            }

            // Fill SEO keywords
            if (product.seoKeywords && product.seoKeywords.length) {
                product.seoKeywords.forEach(keyword => {
                    addListItem('seo-keywords-list', keyword, 'seoKeywords-input');
                });
            }

            // Fill Q&A
            if (product.questionsAndAnswers && product.questionsAndAnswers.length) {
                const qaContainer = document.getElementById('qa-container');
                qaContainer.innerHTML = '';
                product.questionsAndAnswers.forEach(qa => {
                    addQAWithData(qa.question, qa.answer);
                });
            }

            document.getElementById('product-modal-title').textContent = 'Edit Product';
            document.getElementById('product-modal-submit-btn').innerHTML = '<i class="icon-edit"></i> Update Product';
            showModal('product-modal');
        }

        // Toggle product status
        function toggleStatus(productId) {
            const productCard = document.querySelector(`[data-product-id="${productId}"]`);
            if (!productCard) return;

            const statusBadge = productCard.querySelector('.status-badge');
            const toggleIcon = productCard.querySelector('.item.toggle i');
            
            if (statusBadge.classList.contains('active')) {
                statusBadge.classList.remove('active');
                statusBadge.classList.add('inactive');
                statusBadge.textContent = 'Inactive';
                toggleIcon.className = 'icon-toggle-left';
            } else {
                statusBadge.classList.remove('inactive');
                statusBadge.classList.add('active');
                statusBadge.textContent = 'Active';
                toggleIcon.className = 'icon-toggle-right';
            }

            alert(`Product ${productId} status toggled successfully!`);
        }

        // Confirm delete
        function confirmDelete(productId) {
            currentEditProductId = productId;
            showModal('confirm-delete-modal');
        }

        // Handle product delete
        function handleProductDelete() {
            if (!currentEditProductId) return;

            const productCard = document.querySelector(`[data-product-id="${currentEditProductId}"]`);
            if (productCard) {
                productCard.remove();
                alert(`Product ${currentEditProductId} deleted successfully!`);
            }

            closeModal('confirm-delete-modal');
            currentEditProductId = null;
        }

        // Handle product form submission
        function handleProductSubmit() {
            const formData = new FormData(document.getElementById('product-form'));
            const title = formData.get('title');
            
            if (currentEditProductId) {
                alert(`Product "${title}" updated successfully!`);
            } else {
                alert(`Product "${title}" created successfully!`);
            }
            
            closeModal('product-modal');
            resetProductForm();
        }

        // Reset product form
        function resetProductForm() {
            currentEditProductId = null;
            imageFiles = [];
            qaCounter = 0;
            
            const form = document.getElementById('product-form');
            if (form) form.reset();
            
            document.getElementById('product-image-preview-grid').innerHTML = '';
            document.getElementById('features-list').innerHTML = '';
            document.getElementById('packs-list').innerHTML = '';
            document.getElementById('seo-keywords-list').innerHTML = '';
            
            const qaContainer = document.getElementById('qa-container');
            qaContainer.innerHTML = `
                <div class="no-qa-message">
                    <i class="icon-help-circle"></i>
                    <p>No questions added yet. Add common questions and their answers.</p>
                </div>
            `;
        }

        // Generate slug from title
        function generateSlug(text) {
            return text
                .toLowerCase()
                .trim()
                .replace(/[^\w\s-]/g, '')
                .replace(/[\s_-]+/g, '-')
                .replace(/^-+|-+$/g, '');
        }

        // Toggle details
        function toggleDetails(button) {
            const card = button.closest('.product-card');
            if (!card) return;
            
            const details = card.querySelector('.expanded-details');
            if (details) {
                details.classList.toggle('active');
                button.innerHTML = details.classList.contains('active')
                    ? 'Hide Details <i class="icon-chevron-up"></i>'
                    : 'View Details <i class="icon-chevron-down"></i>';
            }
        }

        // Show modal
        function showModal(modalId) {
            const modal = document.getElementById(modalId);
            if (modal) modal.style.display = 'block';
        }

        // Close modal
        function closeModal(modalId) {
            const modal = document.getElementById(modalId);
            if (modal) modal.style.display = 'none';
        }

        // Add key feature
        function addKeyFeature() {
            const input = document.getElementById('new-feature-input');
            const value = input.value.trim();
            if (value) {
                addListItem('features-list', value, 'keyFeatures-input');
                input.value = '';
            }
        }

        // Add pack
        function addPack() {
            const input = document.getElementById('new-pack-input');
            const value = input.value.trim();
            if (value) {
                addListItem('packs-list', value, 'availablePacks-input');
                input.value = '';
            }
        }

        // Add SEO keyword
        function addSeoKeyword() {
            const input = document.getElementById('new-seo-keyword-input');
            const value = input.value.trim();
            if (value) {
                addListItem('seo-keywords-list', value, 'seoKeywords-input');
                input.value = '';
            }
        }

        // Add Q&A
        function addQA() {
            const qaContainer = document.getElementById('qa-container');
            const noQAMessage = qaContainer.querySelector('.no-qa-message');
            if (noQAMessage) noQAMessage.remove();

            const qaId = `qa-${qaCounter++}`;
            const qaItem = document.createElement('div');
            qaItem.className = 'qa-item';
            qaItem.id = qaId;
            qaItem.innerHTML = `
                <div class="qa-header">
                    <h6>Question & Answer</h6>
                    <button type="button" class="btn btn-sm btn-text" onclick="removeQA('${qaId}')">
                        <i class="icon-x"></i>
                    </button>
                </div>
                <div class="form-grid">
                    <div class="form-group">
                        <label>Question *</label>
                        <input type="text" name="questionsAndAnswers[${qaId}][question]" required>
                    </div>
                    <div class="form-group">
                        <label>Answer *</label>
                        <textarea name="questionsAndAnswers[${qaId}][answer]" rows="2" required></textarea>
                    </div>
                </div>
            `;
            qaContainer.appendChild(qaItem);
        }

        // Add Q&A with data (for edit)
        function addQAWithData(question, answer) {
            const qaContainer = document.getElementById('qa-container');
            const noQAMessage = qaContainer.querySelector('.no-qa-message');
            if (noQAMessage) noQAMessage.remove();

            const qaId = `qa-${qaCounter++}`;
            const qaItem = document.createElement('div');
            qaItem.className = 'qa-item';
            qaItem.id = qaId;
            qaItem.innerHTML = `
                <div class="qa-header">
                    <h6>Question & Answer</h6>
                    <button type="button" class="btn btn-sm btn-text" onclick="removeQA('${qaId}')">
                        <i class="icon-x"></i>
                    </button>
                </div>
                <div class="form-grid">
                    <div class="form-group">
                        <label>Question *</label>
                        <input type="text" name="questionsAndAnswers[${qaId}][question]" value="${question}" required>
                    </div>
                    <div class="form-group">
                        <label>Answer *</label>
                        <textarea name="questionsAndAnswers[${qaId}][answer]" rows="2" required>${answer}</textarea>
                    </div>
                </div>
            `;
            qaContainer.appendChild(qaItem);
        }

        // Remove Q&A
        function removeQA(qaId) {
            const qaItem = document.getElementById(qaId);
            if (qaItem) {
                qaItem.remove();
                const qaContainer = document.getElementById('qa-container');
                if (!qaContainer.children.length) {
                    qaContainer.innerHTML = `
                        <div class="no-qa-message">
                            <i class="icon-help-circle"></i>
                            <p>No questions added yet. Add common questions and their answers.</p>
                        </div>
                    `;
                }
            }
        }

        // Add list item
        function addListItem(listId, value, inputId) {
            const list = document.getElementById(listId);
            const itemId = 'item-' + Date.now();
            const item = document.createElement('div');
            item.className = 'list-item';
            item.id = itemId;
            item.innerHTML = `
                <span>${value}</span>
                <button type="button" class="remove-item" onclick="removeListItem('${itemId}', '${inputId}')">
                    <i class="icon-x"></i>
                </button>
                <input type="hidden" name="${inputId}[]" value="${value}">
            `;
            if (list) list.appendChild(item);
        }

        // Remove list item
        function removeListItem(itemId, inputId) {
            const item = document.getElementById(itemId);
            if (item) item.remove();
        }

        // Setup file upload area
        function setupFileUploadArea() {
            const fileUploadArea = document.getElementById('product-file-upload-area');
            const fileInput = document.getElementById('product-images');
            
            if (!fileUploadArea || !fileInput) return;
            
            ['dragenter', 'dragover'].forEach(eventName => {
                fileUploadArea.addEventListener(eventName, highlight, false);
            });
            
            ['dragleave', 'drop'].forEach(eventName => {
                fileUploadArea.addEventListener(eventName, unhighlight, false);
            });
            
            fileUploadArea.addEventListener('drop', handleDrop, false);
            
            function highlight() {
                fileUploadArea.classList.add('highlight');
            }
            
            function unhighlight() {
                fileUploadArea.classList.remove('highlight');
            }
            
            function handleDrop(e) {
                e.preventDefault();
                const dt = e.dataTransfer;
                const files = dt.files;
                if (files.length > 0) {
                    imageFiles = Array.from(files);
                    renderImagePreview();
                    fileInput.files = files;
                }
            }
        }

        // Render image preview
        function renderImagePreview() {
            const grid = document.getElementById('product-image-preview-grid');
            if (!grid) return;
            
            grid.innerHTML = '';
            
            if (!imageFiles.length) {
                grid.innerHTML = '<div class="no-images-message">No images selected</div>';
                return;
            }
            
            imageFiles.forEach((file, idx) => {
                const reader = new FileReader();
                reader.onload = function(e) {
                    const imgContainer = document.createElement('div');
                    imgContainer.className = 'preview-image';
                    imgContainer.innerHTML = `
                        <div class="image-wrapper">
                            <img src="${e.target.result}" alt="Preview ${idx + 1}" />
                            <div class="image-overlay">
                                <span class="img-position">${idx + 1}</span>
                            </div>
                        </div>
                        <div class="preview-controls">
                            <button type="button" class="move-btn" disabled>
                                <i class="icon-chevron-left"></i>
                            </button>
                            <button type="button" class="move-btn" disabled>
                                <i class="icon-chevron-right"></i>
                            </button>
                            <button type="button" class="remove-preview" onclick="removeImagePreview(${idx})">
                                <i class="icon-x"></i>
                            </button>
                        </div>
                    `;
                    grid.appendChild(imgContainer);
                };
                reader.readAsDataURL(file);
            });
        }

        // Remove image preview
        function removeImagePreview(idx) {
            if (confirm('Are you sure you want to remove this image?')) {
                imageFiles.splice(idx, 1);
                renderImagePreview();
                
                // Update file input
                const dataTransfer = new DataTransfer();
                imageFiles.forEach(file => dataTransfer.items.add(file));
                document.getElementById('product-images').files = dataTransfer.files;
            }
        }
    </script>
</body>

