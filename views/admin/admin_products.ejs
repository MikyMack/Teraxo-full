<script>
  document.addEventListener('DOMContentLoaded', () => {
    const productsList = document.getElementById('products-list');
    const productModal = document.getElementById('product-modal');
    const productForm = document.getElementById('product-form');
    const productModalTitle = document.getElementById('product-modal-title');
    const productSubmitBtn = document.getElementById('product-modal-submit-btn');
    const editIdInput = document.getElementById('edit-id');
    const featuresList = document.getElementById('features-list');
    const keyFeaturesInput = document.getElementById('keyFeatures-input');
    const packsList = document.getElementById('packs-list');
    const availablePacksInput = document.getElementById('availablePacks-input');
    const qaContainer = document.getElementById('qa-container');
    const seoKeywordsList = document.getElementById('seo-keywords-list');
    const seoKeywordsInput = document.getElementById('seoKeywords-input');
    const productImagesInput = document.getElementById('product-images');
    const productImagePreviewGrid = document.getElementById('product-image-preview-grid');
    const confirmDeleteModal = document.getElementById('confirm-delete-modal');
    const confirmDeleteBtn = document.getElementById('confirm-delete-btn');
    let allProducts = [];
    let editingProduct = null;
    let existingImages = [];
    let removedExistingImages = new Set();
    let removedNewFileIndexes = new Set();

    async function fetchProducts() {
      try {
        const res = await fetch('/api/admin-product');
        const data = await res.json();
        if (data.success) {
          allProducts = data.products;
          renderProducts(allProducts);
        } else {
          alert('Failed to fetch products');
        }
      } catch (err) {
        console.error(err);
        alert('Error fetching products');
      }
    }

    function renderProducts(products) {
      productsList.innerHTML = '';
      products.forEach(product => {
        const productCard = document.createElement('div');
        productCard.className = 'product-card';
        productCard.dataset.productId = product._id || '';
        const statusClass = product.isActive ? 'active' : 'inactive';
        const isActiveText = product.isActive ? 'Active' : 'Inactive';
        const safeText = (text) => (text ? text : '-');
        let imagesHtml = "";
        if (Array.isArray(product.images) && product.images.length > 0) {
          imagesHtml = `
            <div class="card-images-multi" style="display: flex; gap: 6px; flex-wrap: wrap;">
              ${product.images.map(img =>
                `<img 
                  src="${img.startsWith('/') ? img : `/uploads/${img}`}" 
                  alt="${safeText(product.title)}"
                  class="card-product-img"
                  style="width:64px; height:64px; object-fit:cover; border-radius:6px; border:1px solid #e3e3e3; background:#f6f6f6"
                  onerror="this.onerror=null;this.src='/images/default-product.jpg';"
                >`
              ).join('')}
            </div>
          `;
        } else {
          imagesHtml = `
            <div class="card-images-multi">
              <img src="/images/default-product.jpg" alt="No Image" class="card-product-img" style="width:64px; height:64px; object-fit:cover; border-radius:6px; border:1px solid #e3e3e3; background:#f6f6f6">
            </div>
          `;
        }
        productCard.innerHTML = `
      <div class="card-header">
        <h3 class="card-title">${safeText(product.title)}</h3>
        <span class="status-badge ${statusClass}">${isActiveText}</span>
      </div>
      ${imagesHtml}
      <div class="card-body">
        <div class="detail-grid">
          <div class="detail-item"><span class="detail-label">Slug:</span> <span class="detail-value">${safeText(product.slug)}</span></div>
          <div class="detail-item"><span class="detail-label">Chemical Base:</span> <span class="detail-value">${safeText(product.chemicalBase)}</span></div>
          <div class="detail-item"><span class="detail-label">Shelf Life:</span> <span class="detail-value">${safeText(product.shelfLife)}</span></div>
          <div class="detail-item"><span class="detail-label">Appearance:</span> <span class="detail-value">${safeText(product.appearance)}</span></div>
        </div>
      </div>
      <div class="card-footer">
        <button class="details-btn" onclick="toggleDetails(this)">View Details <i class="icon-chevron-down"></i></button>
        <div class="card-actions">
          <button class="item edit" title="Edit Product" onclick="editProduct('${product._id || ''}')"><i class="icon-edit-3"></i></button>
          <button class="item toggle" title="Toggle Status" onclick="toggleStatus('${product._id || ''}')"><i class="icon-toggle-right"></i></button>
          <button class="item trash" title="Delete Product" onclick="confirmDelete('${product._id || ''}')"><i class="icon-trash-2"></i></button>
        </div>
      </div>
      <div class="expanded-details">
        ${product.description ? `
          <div class="detail-section">
            <h4><i class="icon-file-text"></i> Description</h4>
            <p>${product.description}</p>
          </div>` : ''}
        ${product.subDescription ? `
          <div class="detail-section">
            <h4><i class="icon-file-text"></i> Sub Description</h4>
            <p>${product.subDescription}</p>
          </div>` : ''}
        ${(product.keyFeatures && product.keyFeatures.length > 0) ? `
          <div class="detail-section">
            <h4><i class="icon-star"></i> Key Features</h4>
            <ul>${product.keyFeatures.map(f => `<li>${f}</li>`).join('')}</ul>
          </div>` : ''}
        ${(product.availablePacks && product.availablePacks.length > 0) ? `
          <div class="detail-section">
            <h4><i class="icon-package"></i> Available Packs</h4>
            <ul>${product.availablePacks.map(p => `<li>${p}</li>`).join('')}</ul>
          </div>` : ''}
      </div>
        `;
        productsList.appendChild(productCard);
      });
    }

    productImagesInput.addEventListener('change', function () {
      const files = Array.from(this.files);
      productImagePreviewGrid.querySelectorAll('.preview-new').forEach(el => el.remove());
      removedNewFileIndexes = new Set();
      files.forEach((file, idx) => {
        const reader = new FileReader();
        reader.onload = function (event) {
          const wrapper = document.createElement('div');
          wrapper.classList.add('preview-image', 'preview-new');
          wrapper.dataset.newIndex = idx;
          wrapper.innerHTML = `
            <img src="${event.target.result}" alt="${file.name}">
            <button type="button" class="remove-btn remove-new">&times;</button>
          `;
          wrapper.querySelector('.remove-new').addEventListener('click', () => {
            removedNewFileIndexes.add(Number(wrapper.dataset.newIndex));
            wrapper.remove();
          });
          productImagePreviewGrid.appendChild(wrapper);
        };
        reader.readAsDataURL(file);
      });
    });

    document.getElementById('add-product-btn').addEventListener('click', () => {
      resetForm();
      editingProduct = null;
      existingImages = [];
      removedExistingImages = new Set();
      productModalTitle.textContent = 'Add New Product';
      productSubmitBtn.textContent = 'Create Product';
      openModal('product-modal');
    });

    productForm.addEventListener('submit', async (e) => {
      e.preventDefault();
      const formData = new FormData();
      formData.set('title', document.getElementById('product-title').value);
      formData.set('slug', document.getElementById('product-slug').value);
      formData.set('description', document.getElementById('product-description').value);
      formData.set('subDescription', document.getElementById('product-subDescription').value || '');
      formData.set('chemicalBase', document.getElementById('product-chemicalBase').value || '');
      formData.set('appearance', document.getElementById('product-appearance').value || '');
      formData.set('shelfLife', document.getElementById('product-shelfLife').value || '');
      formData.set('cureTime', document.getElementById('product-cureTime').value || '');
      formData.set('applicationTips', document.getElementById('product-applicationTips').value || '');
      formData.set('seoTitle', document.getElementById('product-seoTitle').value || '');
      formData.set('seoDescription', document.getElementById('product-seoDescription').value || '');
      getListItems(featuresList).forEach(v => formData.append('keyFeatures', v));
      getListItems(packsList).forEach(v => formData.append('availablePacks', v));
      getListItems(seoKeywordsList).forEach(v => formData.append('seoKeywords', v));
      formData.set('questionsAndAnswers', JSON.stringify(getQAItems()));
      formData.set('isActive', document.getElementById('product-isActive').checked ? 'true' : 'false');
      formData.set('existingImages', JSON.stringify(existingImages));
      formData.set('removedExistingImages', JSON.stringify([...removedExistingImages]));
      const newFiles = Array.from(productImagesInput.files || []);
      if (newFiles.length > 0) {
        newFiles.forEach((file, idx) => {
          if (!removedNewFileIndexes.has(idx)) {
            formData.append('images', file);
          }
        });
      }
      if (editingProduct) {
        formData.set('appendImages', true);
      }
      try {
        const url = editingProduct ? `/api/admin-product/${editingProduct._id}` : `/api/admin-product`;
        const method = editingProduct ? 'PUT' : 'POST';
        const res = await fetch(url, { method, body: formData });
        const data = await res.json();
        if (data.success) {
          alert(data.message);
          closeModal('product-modal');
          fetchProducts();
        } else {
          alert(data.message || 'Operation failed');
        }
      } catch (err) {
        console.error(err);
        alert('Error submitting form');
      }
    });

    window.editProduct = async (id) => {
      resetForm();
      try {
        const res = await fetch(`/api/admin-product/${id}`);
        const data = await res.json();
        if (data.success) {
          editingProduct = data.product;
          populateForm(editingProduct);
          productModalTitle.textContent = 'Edit Product';
          productSubmitBtn.textContent = 'Update Product';
          openModal('product-modal');
        } else {
          alert('Product not found');
        }
      } catch (err) {
        console.error(err);
        alert('Error fetching product');
      }
    };

    window.toggleStatus = async (id) => {
      if (!confirm('Are you sure you want to toggle this product status?')) return;
      try {
        const res = await fetch(`/api/admin-product/toggle/${id}`, { method: 'PATCH' });
        const data = await res.json();
        if (data.success) {
          alert(data.message);
          fetchProducts();
        } else {
          alert('Failed to toggle status');
        }
      } catch (err) {
        console.error(err);
        alert('Error toggling status');
      }
    };

    let deletingProductId = null;
    window.confirmDelete = (id) => {
      deletingProductId = id;
      openModal('confirm-delete-modal');
    };

    confirmDeleteBtn.addEventListener('click', async () => {
      if (!deletingProductId) return;
      try {
        const res = await fetch(`/api/admin-product/${deletingProductId}`, { method: 'DELETE' });
        const data = await res.json();
        if (data.success) {
          alert(data.message);
          closeModal('confirm-delete-modal');
          fetchProducts();
        } else {
          alert('Failed to delete product');
        }
      } catch (err) {
        console.error(err);
        alert('Error deleting product');
      }
    });

    function getListItems(container) {
      return Array.from(container.querySelectorAll('.list-item')).map(el => el.textContent);
    }

    function getQAItems() {
      const qaItems = [];
      qaContainer.querySelectorAll('.qa-item').forEach(item => {
        const question = item.querySelector('.qa-question').value;
        const answer = item.querySelector('.qa-answer').value;
        if (question && answer) qaItems.push({ question, answer });
      });
      return qaItems;
    }

    function resetForm() {
      productForm.reset();
      editIdInput.value = '';
      featuresList.innerHTML = '';
      packsList.innerHTML = '';
      seoKeywordsList.innerHTML = '';
      qaContainer.innerHTML = `<div class="no-qa-message"><i class="icon-help-circle"></i><p>No questions added yet. Add common questions and their answers.</p></div>`;
      productImagePreviewGrid.innerHTML = '';
      editingProduct = null;
      existingImages = [];
      removedExistingImages = new Set();
      removedNewFileIndexes = new Set();
    }

    function populateForm(product) {
      editIdInput.value = product._id;
      document.getElementById('product-title').value = product.title;
      document.getElementById('product-slug').value = product.slug;
      document.getElementById('product-description').value = product.description;
      document.getElementById('product-subDescription').value = product.subDescription || '';
      document.getElementById('product-chemicalBase').value = product.chemicalBase || '';
      document.getElementById('product-appearance').value = product.appearance || '';
      document.getElementById('product-shelfLife').value = product.shelfLife || '';
      document.getElementById('product-cureTime').value = product.cureTime || '';
      document.getElementById('product-applicationTips').value = product.applicationTips || '';
      document.getElementById('product-seoTitle').value = product.seoTitle || '';
      document.getElementById('product-seoDescription').value = product.seoDescription || '';
      document.getElementById('product-isActive').checked = product.isActive;
      (product.keyFeatures || []).forEach(f => addKeyFeature(f));
      (product.availablePacks || []).forEach(p => addPack(p));
      (product.seoKeywords || []).forEach(k => addSeoKeyword(k));
      if (product.questionsAndAnswers && product.questionsAndAnswers.length) {
        qaContainer.innerHTML = '';
        product.questionsAndAnswers.forEach(qa => addQA(qa.question, qa.answer));
      }
      productImagePreviewGrid.innerHTML = '';
      existingImages = Array.isArray(product.images) ? [...product.images] : [];
      existingImages.forEach((imgName) => {
        const wrapper = document.createElement('div');
        wrapper.classList.add('preview-image', 'preview-old');
        wrapper.dataset.img = imgName;
        wrapper.innerHTML = `
          <img src="${imgName.startsWith('/') ? imgName : `/uploads/${imgName}`}" alt="product">
          <button type="button" class="remove-btn remove-old">&times;</button>
        `;
        wrapper.querySelector('.remove-old').addEventListener('click', () => {
          wrapper.remove();
          existingImages = existingImages.filter(i => i !== imgName);
          removedExistingImages.add(imgName);
        });
        productImagePreviewGrid.appendChild(wrapper);
      });
    }

    fetchProducts();

    window.addKeyFeature = (value = '') => {
      const val = value || document.getElementById('new-feature-input').value.trim();
      if (!val) return;
      const item = document.createElement('div');
      item.classList.add('list-item');
      item.textContent = val;
      item.addEventListener('click', () => item.remove());
      featuresList.appendChild(item);
      document.getElementById('new-feature-input').value = '';
    };

    window.addPack = (value = '') => {
      const val = value || document.getElementById('new-pack-input').value.trim();
      if (!val) return;
      const item = document.createElement('div');
      item.classList.add('list-item');
      item.textContent = val;
      item.addEventListener('click', () => item.remove());
      packsList.appendChild(item);
      document.getElementById('new-pack-input').value = '';
    };

    window.addSeoKeyword = (value = '') => {
      const val = value || document.getElementById('new-seo-keyword-input').value.trim();
      if (!val) return;
      const item = document.createElement('div');
      item.classList.add('list-item');
      item.textContent = val;
      item.addEventListener('click', () => item.remove());
      seoKeywordsList.appendChild(item);
      document.getElementById('new-seo-keyword-input').value = '';
    };

    window.addQA = (question = '', answer = '') => {
      const qaItem = document.createElement('div');
      qaItem.classList.add('qa-item');
      qaItem.innerHTML = `
            <input type="text" class="qa-question" placeholder="Question" value="${question}" required>
            <input type="text" class="qa-answer" placeholder="Answer" value="${answer}" required>
            <button type="button" class="remove-btn" onclick="this.parentElement.remove()">&times;</button>
        `;
      qaContainer.appendChild(qaItem);
      qaContainer.querySelector('.no-qa-message')?.remove();
    };
  });

  function openModal(modalId) {
    const modal = document.getElementById(modalId);
    if (modal) modal.style.display = 'block';
  }

  function closeModal(modalId) {
    const modal = document.getElementById(modalId);
    if (modal) modal.style.display = 'none';
    if (modalId === 'product-modal') {
      document.getElementById('product-form').reset();
      document.getElementById('features-list').innerHTML = '';
      document.getElementById('packs-list').innerHTML = '';
      document.getElementById('qa-container').innerHTML = `<div class="no-qa-message">
      <i class="icon-help-circle"></i>
      <p>No questions added yet. Add common questions and their answers.</p>
    </div>`;
      document.getElementById('seo-keywords-list').innerHTML = '';
      document.getElementById('product-image-preview-grid').innerHTML = '';
      document.getElementById('edit-id').value = '';
      document.getElementById('product-modal-submit-btn').innerText = 'Create Product';
      document.getElementById('product-modal-title').innerText = 'Add New Product';
    }
  }

  window.onclick = function (event) {
    const productModal = document.getElementById('product-modal');
    const deleteModal = document.getElementById('confirm-delete-modal');
    if (event.target === productModal) closeModal('product-modal');
    if (event.target === deleteModal) closeModal('confirm-delete-modal');
  };

  function toggleDetails(btn) {
    const card = btn.closest('.product-card');
    const details = card.querySelector('.expanded-details');
    if (!details) return;
    details.classList.toggle('active');
    if (details.classList.contains('active')) {
      btn.innerHTML = 'Hide Details <i class="icon-chevron-up"></i>';
    } else {
      btn.innerHTML = 'View Details <i class="icon-chevron-down"></i>';
    }
  }
</script>






